<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.tripplleat.trippleattcustomer.ui.auth.viewmodel.AuthViewModal" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            tools:context=".ui.auth.customer.LoginFragment">
            <LinearLayout
                android:layout_marginTop="250dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_marginStart="15dp"
                    android:background="@drawable/stroke_otp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="+91"
                    android:inputType="none"
                    android:enabled="false"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:layout_weight="0.25"
                    android:fontFamily="@font/verdana"
                    />
                <EditText
                    android:text="@={viewmodel.phonenumber}"
                    android:id="@+id/phone_number"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/stroke_otp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:maxLines="1"
                    android:inputType="number"
                    android:fontFamily="@font/verdana"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    android:paddingStart="15dp"
                    android:hint="@string/phone_number"
                    android:paddingEnd="15dp"
                    android:maxLength="10"
                    android:layout_weight="0.8"
                    />
            </LinearLayout>
            <Button
                android:fontFamily="@font/verdana"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_login"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:text="@string/send_otp"
                android:textSize="21sp"
                android:onClick="@{viewmodel.sendVerifiactionCode}"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Are you a "
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:onClick="@{viewmodel.gotoBusilogin}"
                    android:fontFamily="@font/verdana"
                    android:id="@+id/underline_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buisness"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:fontFamily="@font/verdana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ?"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />



            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="15dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end">
                <TextView
                    android:onClick="@{viewmodel.gotoDriverlogin}"
                    android:fontFamily="@font/verdana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivertext"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    />



            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>
