<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/variantImageLoose"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Product Name"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/variantImageLoose"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:id="@+id/txtProductNameLoose"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loose"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/txtProductNameLoose"
        android:layout_toRightOf="@+id/variantImageLoose"
        android:id="@+id/txtVaraintName"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="enter Selling Price"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:id="@+id/etVariantSellingPrice"
        android:textStyle="bold"
        android:layout_below="@+id/txtVaraintName"
        android:layout_toRightOf="@+id/variantImageLoose"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtVaraintName"
        android:layout_toRightOf="@+id/etVariantSellingPrice"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Enter Unit"
        android:id="@+id/etvariantUnitLoose"/>

    <EditText
        android:id="@+id/etVariantStock"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:hint="Enter your current stock"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/etVariantSellingPrice"
        android:layout_toRightOf="@+id/variantImageLoose"/>

</RelativeLayout>