<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgProductCart"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/txtProductRatingCart"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="3dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:text="4.0(21)"
                android:drawableStart="@drawable/star_black"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtProductNameCart"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="3dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:text="Product name here"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/txtVariantNameCart"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="3dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:text="variant name"
                android:textStyle="bold"
                android:background="@drawable/button_login"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/txtDescriptionCart"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="3dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:text="Short description"
                android:textColor="@android:color/black"/>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/txtProductPriceCart"
                  android:layout_marginStart="10dp"
                  android:layout_marginEnd="10dp"
                  android:padding="3dp"
                  android:paddingStart="5dp"
                  android:paddingEnd="5dp"
                  android:textAlignment="center"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="19sp"
                  android:text="Price"
                  android:textColor="@android:color/black"/>
              <TextView
                  android:id="@+id/txtProductQuantityCart"
                  android:layout_alignParentEnd="true"
                  android:layout_marginStart="10dp"
                  android:layout_marginEnd="10dp"
                  android:padding="3dp"
                  android:paddingStart="5dp"
                  android:paddingEnd="5dp"
                  android:textAlignment="center"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="19sp"
                  android:text="Qty: 1.2kg"
                  android:textColor="@android:color/black"/>
          </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtSaveForLater"
            android:layout_weight="0.5"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="3dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textStyle="bold"
            android:text="Save for later"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/txtProductRemoveCart"
           android:layout_weight="0.5"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="3dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textStyle="bold"
            android:text="Remove"
            android:textColor="@android:color/holo_red_dark"/>
    </LinearLayout>

</LinearLayout>