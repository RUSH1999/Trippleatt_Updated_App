<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:behavior_skipCollapsed="false"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:elevation="25dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/borders">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgProductCustomer"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/txtProductRatingCustomer"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="3dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:text="4.0(21)"
                android:drawableStart="@drawable/star_black"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtProductNameCustomer"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="3dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:text="Product name here"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/productVariantRecyclerView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Total Price:"
                   android:layout_marginStart="10dp"
                   android:padding="3dp"
                   android:paddingStart="5dp"
                   android:paddingEnd="5dp"
                   android:textAlignment="center"
                   android:textColor="@android:color/black"
                   android:textSize="19sp"
                   android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtProductPriceCustomer"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="3dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:text="Price"
                    android:textColor="@android:color/black"/>
           </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnAddProductCustomer"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="#1DEA06"
        android:text="Add to cart"
        android:textSize="15dp"
        android:textStyle="bold" />

    <View
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#BCB9B9"
        />

</LinearLayout>

