<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:elevation="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borders"
        android:orientation="horizontal">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgProductCart"
                android:layout_width="130dp"
                android:layout_height="140dp"/>
            <TextView
                android:id="@+id/txtProductRatingCart"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="3dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="4.0(21)"
                android:drawableStart="@drawable/star_black"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/txtProductNameCart"
                android:layout_marginTop="10dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="10dp"
                android:paddingEnd="5dp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="Product name here"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/txtVariantNameCart"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="10dp"
                android:paddingEnd="15dp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="variant name"
                android:textStyle="bold"
                android:textColor="#959595"/>
            <TextView
                android:id="@+id/txtDescriptionCart"
                android:layout_marginEnd="10dp"
                android:paddingEnd="5dp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Sasta Hyper Mall"
                android:textColor="#959595" />
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/txtProductPriceCart"
                  android:layout_marginStart="10dp"
                  android:layout_marginEnd="10dp"
                  android:padding="3dp"
                  android:paddingStart="5dp"
                  android:paddingEnd="5dp"
                  android:textAlignment="center"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="18sp"
                  android:text="Price"
                  android:textColor="@android:color/black"/>
              <TextView
                  android:id="@+id/txtProductQuantityCart"
                  android:layout_alignParentEnd="true"
                  android:layout_marginStart="10dp"
                  android:layout_marginEnd="10dp"
                  android:padding="3dp"
                  android:paddingStart="5dp"
                  android:paddingEnd="5dp"
                  android:textAlignment="center"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="18sp"
                  android:textStyle="bold"
                  android:text="Qty: 1.2kg"
                  android:textColor="@android:color/black"/>
          </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F1EEEE">
        <TextView
            android:id="@+id/txtSaveForLater"
            android:layout_weight="0.5"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="3dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Save for later"
            android:textColor="#505050"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#BCB9B9"
            />

        <TextView
            android:id="@+id/txtProductRemoveCart"
            android:layout_weight="0.5"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="3dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Remove"
            android:textColor="#505050"/>

    </LinearLayout>

    <View
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#BCB9B9"
        />

</LinearLayout>